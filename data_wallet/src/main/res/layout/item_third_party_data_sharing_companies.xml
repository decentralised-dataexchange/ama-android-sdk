<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/clItem"
    android:focusable="true">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/igrant_icon"
        app:layout_constraintBottom_toBottomOf="@+id/tvCompanyName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCompanyName" />

    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Company Name A"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toStartOf="@+id/swCompany"
        app:layout_constraintStart_toEndOf="@+id/ivLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/swCompany"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:scaleX="1"
        android:scaleY="1"
        android:clickable="false"
        android:enabled="false"
        android:thumb="@drawable/switch_ios_selection"
        app:layout_constraintBottom_toBottomOf="@+id/tvCompanyName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCompanyName"
        app:layout_constraintTop_toTopOf="@+id/tvCompanyName"
        app:track="@drawable/switch_ios_track" />

</androidx.constraintlayout.widget.ConstraintLayout>