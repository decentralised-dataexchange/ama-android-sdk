<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Data Wallet"
        app:layout_constraintBottom_toTopOf="@+id/btConnections"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btConnections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connections"
        app:layout_constraintBottom_toTopOf="@+id/btNotifications"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wallet" />

    <Button
        android:id="@+id/btNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        app:layout_constraintBottom_toTopOf="@+id/btMySharedHistory"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btConnections" />

    <Button
        android:id="@+id/btMySharedHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Shared Data"
        app:layout_constraintBottom_toTopOf="@+id/btShareData"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btNotifications" />

    <Button
        android:id="@+id/btShareData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Data"
        app:layout_constraintBottom_toTopOf="@+id/btDataAgreementPolicy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btMySharedHistory" />

    <Button
        android:id="@+id/btDataAgreementPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Agreement policy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btShareData" />

</androidx.constraintlayout.widget.ConstraintLayout>